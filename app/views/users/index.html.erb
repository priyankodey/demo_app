<div class="page-header">
<h1>Listing users</h1>
</div>

    <% @users.each do |user| %>
      <div class="user">
        <strong><%=user.name %></strong>     
        <p><%= user.email %></p>
        <div class = "meta">
          <%=link_to time_ago_in_words(user.created_at)+" ago",user %>
        
        <span class="admin">
          | <%= link_to 'Edit',edit_user_path(user)%> |
          <%= link_to 'Destroy',user, method: :delete,data:{ confirm: 'Are you sure?'}%>
        </span>
        </div>
        </div>
    <% end %>
<%= link_to 'New User', new_user_path, class: "btn btn-primary" %>

<p id="pdf_link"><%= link_to "Download (PDF)", users_path(:format => "pdf") %></p>

